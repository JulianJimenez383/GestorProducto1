@model IEnumerable<GestorProductoBack.Model.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>USUARIOS</h2>

<p>
    @Html.ActionLink("Nuevo Usuario", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApellidoUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CorreoUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNaciUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CargoUsuario)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorreoUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNaciUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CargoUsuario)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdUsuario }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Detalles", "Details", new { id = item.IdUsuario }, new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Borrar", "Delete", new { id = item.IdUsuario }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
